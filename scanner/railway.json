{
  "$schema": "https://backboard.railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "scanner/Dockerfile",
    "watchPatterns": ["scanner/**"]
  },
  "deploy": {
    "startCommand": "./scanner",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "numReplicas": 1
  }
}
